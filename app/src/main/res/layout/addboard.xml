<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <!-- 글쓰기 취소버튼 -->
    <Button
        android:id="@+id/buttonCanlcel"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="-258dp"
        android:layout_toLeftOf="@id/textview_title_write"
        android:background="@drawable/button_shape2"
        android:text="취소" />

    <!-- 글쓰기 text -->
    <TextView
        android:id="@+id/textview_title_write"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="글 쓰기"
        android:textSize="40sp" />

    <!-- 글쓰기 완료버튼 -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="129dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/textview_title_write"
        android:background="@drawable/button_shape"
        android:text="완료" />

    <!-- 글쓰기 title 입력란 -->
    <EditText
        android:id="@+id/EditText_title"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_title_write"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="제목"
        android:textSize="20sp" />

    <!-- 글쓰기 content 입력란 -->
    <EditText
        android:id="@+id/EditText_content"
        android:layout_width="387dp"
        android:layout_height="match_parent"
        android:layout_below="@id/textview_title_write"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="내용"
        android:textSize="15sp" />


</RelativeLayout>
